{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "EMRFullAccess",
      "Effect": "Allow",
      "Action": "elasticmapreduce:*",
      "Resource": "*"
    },
    {
      "Sid": "EMRPassRolePermissions",
      "Effect": "Allow",
      "Action": [
        "iam:PassRole"
      ],
      "Resource": [
        "arn:aws:iam::ACCOUNT_ID:role/EasyDBLabEMRServiceRole",
        "arn:aws:iam::ACCOUNT_ID:role/EasyDBLabEMREC2Role"
      ]
    },
    {
      "Sid": "EMRServiceLinkedRolePermissions",
      "Effect": "Allow",
      "Action": [
        "iam:CreateServiceLinkedRole"
      ],
      "Resource": "arn:aws:iam::*:role/aws-service-role/elasticmapreduce.amazonaws.com*/AWSServiceRoleForEMR*",
      "Condition": {
        "StringLike": {
          "iam:AWSServiceName": [
            "elasticmapreduce.amazonaws.com",
            "elasticmapreduce.amazonaws.com.cn"
          ]
        }
      }
    }
  ]
}
